{
  "name": "sakiewka-crypto-local",
  "version": "1.0.0",
  "description": "Client-side Sakiewka app",
  "engines": {
    "node": ">=10.0.0 <11.0.0",
    "npm": ">=6.0.0 <7.0.0 "
  },
  "scripts": {
    "test-coverage": "jest --forceExit --coverage --verbose",
    "test-single-currency": "jest --forceExit --verbose false --detectOpenHandles",
    "test": "NODE_ENV=test CURRENCY_UNDER_TEST=BTC BTC_NETWORK=mainnet npm run test-single-currency && NODE_ENV=test CURRENCY_UNDER_TEST=BTG BTC_NETWORK=mainnet npm run test-single-currency",
    "watch-test": "npm run test -- --watchAll",
    "build": "tsc && npm run swagger",
    "swagger": "cp src/api/swagger.yml dist/api/swagger.yml",
    "generateSwagger": "cd api; sbt \"api/run ../src/api/swagger.yml\"; cd ..;",
    "watch": "tsc -w",
    "start": "node $NODE_DEBUG_OPTION dist/api/server.js",
    "serve-debug": "NODE_ENV=dev DEBUG=* nodemon --inspect dist/api/server.js",
    "watch-debug": "NODE_ENV=dev DEBUG=* concurrently \"npm run watch\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softwaremill/sakiewka-client.git"
  },
  "author": "SoftwareMill",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/softwaremill/sakiewka-client/issues"
  },
  "homepage": "https://github.com/softwaremill/sakiewka-client#readme",
  "devDependencies": {
    "@types/bitcoinjs-lib": "3.4.0",
    "@types/body-parser": "1.17.0",
    "@types/chai": "4.1.7",
    "@types/express": "4.16.0",
    "@types/joi": "13.6.3",
    "@types/mocha": "5.2.5",
    "@types/node": "10.12.12",
    "@types/node-fetch": "2.1.4",
    "chai": "4.2.0",
    "concurrently": "3.6.1",
    "jest": "23.6.0",
    "merge": "1.2.1",
    "nodemon": "1.18.7",
    "supertest": "3.3.0",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "2.9.2"
  },
  "dependencies": {
    "@types/sjcl": "1.0.28",
    "bitcoinjs-lib": "3.3.2",
    "body-parser": "1.18.3",
    "chai-uuid": "^1.0.6",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "express-correlation-id": "^1.3.0",
    "joi": "13.7.0",
    "node-fetch": "2.3.0",
    "sakiewka-crypto": "github:softwaremill/sakiewka-crypto#f8ef77d",
    "swagger-ui-express": "4.0.1",
    "winston": "^3.1.0",
    "yamljs": "0.3.0"
  }
}
