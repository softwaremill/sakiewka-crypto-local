{
  "name": "sakiewka-crypto-local",
  "version": "1.0.0",
  "description": "Client-side Sakiewka app",
  "scripts": {
    "test-coverage": "jest --forceExit --coverage --verbose",
    "test": "jest --forceExit --verbose false",
    "watch-test": "NODE_ENV=dev npm run test -- --watchAll",
    "build": "tsc && npm run swagger",
    "swagger": "cp src/api/swagger.yml dist/api/swagger.yml",
    "watch": "tsc -w",
    "start": "node dist/api/server.js",
    "serve-debug": "NODE_ENV=dev DEBUG=* nodemon --inspect dist/api/server.js",
    "watch-debug": "NODE_ENV=dev DEBUG=* concurrently \"npm run watch\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softwaremill/sakiewka-client.git"
  },
  "author": "SoftwareMill",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/softwaremill/sakiewka-client/issues"
  },
  "homepage": "https://github.com/softwaremill/sakiewka-client#readme",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.5.2",
    "@types/node-fetch": "^2.1.1",
    "@types/bitcoinjs-lib": "^3.4.0",
    "@types/joi": "^13.4.0",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "jest": "^23.4.0",
    "nodemon": "^1.18.7",
    "supertest": "^3.1.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/sjcl": "^1.0.28",
    "bitcoinjs-lib": "^3.3.2",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "joi": "^13.5.2",
    "node-fetch": "^2.1.2",
    "sakiewka-crypto": "softwaremill/sakiewka-crypto#b4e15c6",
    "swagger-ui-express": "^4.0.1",
    "yamljs": "^0.3.0"
  }
